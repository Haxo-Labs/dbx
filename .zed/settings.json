{
  "language_overrides": {
    "Rust": {
      "format_on_save": true,
      "enable_language_server": true,
      "language_server": {
        "initialization_options": {
          "checkOnSave": {
            "command": "clippy"
          },
          "cargo": {
            "loadOutDirsFromCheck": true,
            "allFeatures": true
          },
          "procMacro": {
            "enable": true
          },
          "inlayHints": {
            "bindingModeHints": {
              "enable": true
            },
            "closureReturnTypeHints": {
              "enable": "always"
            },
            "discriminantHints": {
              "enable": "always"
            },
            "expressionAdjustmentHints": {
              "enable": "always"
            },
            "implicitDrops": {
              "enable": true
            },
            "lifetimeElisionHints": {
              "enable": "always",
              "useParameterNames": true
            },
            "parameterHints": {
              "enable": true
            },
            "typeHints": {
              "enable": true,
              "hideClosureInitialization": false,
              "hideNamedConstructor": false
            }
          }
        }
      }
    }
  }
}
